# Настройки Битрикс24
# URL для REST API запросов (включает webhook токен)
BITRIX24_WEBHOOK_URL=https://your-domain.bitrix24.ru/rest/1/your-webhook-token/

# Токен приложения для валидации webhook запросов (обязательно)
BITRIX24_APPLICATION_TOKEN=your-application-token

# Локальное хранилище данных
# Все данные хранятся локально в JSON файлах
# Директория: data/

# Настройки логирования
LOG_ENABLED=true
LOG_LEVEL=INFO
