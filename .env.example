# Настройки Битрикс24
# URL для REST API запросов (включает webhook токен)
BITRIX24_WEBHOOK_URL=https://your-domain.bitrix24.ru/rest/1/your-webhook-token/

# Секрет для дополнительной валидации вебхуков (опционально)
BITRIX24_WEBHOOK_SECRET=your-webhook-secret

# OAuth 2.0 настройки (для будущих расширений)
BITRIX24_CLIENT_ID=your-client-id
BITRIX24_CLIENT_SECRET=your-client-secret

# Настройки личного кабинета
LK_API_URL=https://your-lk-domain.com/api/
LK_API_KEY=your-lk-api-key
LK_API_TIMEOUT=30

# Настройки логирования
LOG_ENABLED=true
LOG_LEVEL=INFO

# Настройки БД (если потребуется в будущем)
# DB_HOST=localhost
# DB_NAME=bitrix24_integration
# DB_USER=user
# DB_PASS=password
